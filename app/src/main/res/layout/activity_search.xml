<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SearchActivity">

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Search For: Breweries(by Address, Zip, or Name)"
        android:id="@+id/searchBreweriesText"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryText"
        android:layout_marginTop="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="9"
        android:textSize="30sp"
        android:inputType="number"
        android:id="@+id/searchBreweriesEntry"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/searchBreweriesText"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Search Request"
        android:id="@+id/searchBreweriesButton"
        android:layout_below="@+id/searchBreweriesEntry"
        android:layout_centerHorizontal="true"
        android:background="@color/colorAccent"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:id="@+id/orTextView"
        android:layout_below="@+id/searchBreweriesButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Profile"
        android:id="@+id/viewProfileButton"
        android:layout_below="@+id/orTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@color/colorAccent" />

